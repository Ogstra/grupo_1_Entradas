<style>
    html,
    body {
        position: relative;
        height: 100%;
    }

    body {
        background: #eee;
        font-family:
            Helvetica Neue,
            Helvetica,
            Arial,
            sans-serif;
        font-size: 14px;
        color: #000;
        margin: 0;
        padding: 0;
    }


    .swiper-slide {
        box-shadow: 0 0 9px 1px hsla(0, 0%, 0%, 0.15);
        border-radius: 16px;
        max-height: 300px !important;
        height: 100%;
        max-width: 450px;
        text-align: center;
        font-size: 18px;
        background: #a5a5a5;
        justify-content: center;
        align-items: center;
        aspect-ratio: 16/9;
        background-color: var(--GrisClaro)
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        aspect-ratio: 16/9;
    }

    .swiper-pagination {
        position: unset;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .swiper-button-next{
        border-right: 1px solid grey;
    }
    .swiper-button-prev{
        border-right: 1px solid grey;
    }
    .swiper-button-nextt, .swiper-button-prevv{
        position: relative;
        color: #000 !important;
        fill: black !important;
        stroke: black !important;
        width: 30px;
        height: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .swiper-button-nextt i,
    .swiper-button-prevv i {
        font-size: 22px;
    }
    
    .swiper-wrapper {
        height: auto;
        margin: 15px 0;
    }

    .swiper-pagination-current,
    .swiper-pagination-total{
        padding-right: 0!important;
    }
</style>
    <script>
      var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1.1,
        spaceBetween: 15,
        pagination: {
          el: ".swiper-pagination",
          type: "fraction",
        },
        navigation: {
          nextEl: ".swiper-button-nextt",
          prevEl: ".swiper-button-prevv",
        },
        breakpoints: {
          960: {
            slidesPerView: 4,
            spaceBetween: 15,
          },
          548: {
            slidesPerView: 3,
            spaceBetween: 15,
          }
        },
      });
    </script>

